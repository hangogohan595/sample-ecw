<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 mb-3">
            <div class="card text-center">
                <div id="carouselExample<%= product._id %>" class="carousel slide">
                    <div class="carousel-inner">
                        <% product.images.forEach((image, i)=> { %>
                            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                                <img crossorigin="anonymous" src="<%= image.url %>" class="d-block w-100" alt="product-image">
                            </div>
                            <% }) %>
                    </div>
                    <% if (product.images.length> 1) { %>
                        <button class="carousel-control-prev" type="button"
                            data-bs-target="#carouselExample<%= product._id %>" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button"
                            data-bs-target="#carouselExample<%= product._id %>" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                        <% } %>
                </div>
                <h5 class="card-header">
                    <%= product.name %>
                </h5>
                <div class="card-body">
                    <h5 class="card-title">
                        $ <%= product.price %>.00
                    </h5>
                    <h5 class="card-title">
                        Available: <%= product.quantity %>
                    </h5>
                    <p class="card-text">
                        <%= product.description %>
                    </p>
                    <a href="/s/stores/<%= id %>/products/<%= product._id %>/edit" class="btn btn-primary">Edit</a>
                    <form class="mt-1 d-inline" action="/products/<%= product._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Remove Product</button>
                    </form>
                    <a href="/s/stores/<%= id %>" class="btn btn-success">Back to Store</a>
                </div>
                <div class="card-footer text-muted">
                    <%= product.updatedAt %>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2>Product Reviews</h2>
            <% for (let review of product.reviews) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            Rating: <%= review.rating %>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">
                            <%= review.user.firstName %>
                        </h6>
                        <p class="card-text">
                            <%= review.body %>
                        </p>
                    </div>
                </div>
                <% } %>
        </div>

    </div>